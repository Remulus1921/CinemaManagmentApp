@model CinemaManagment.Models.CinemaHall

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CinemaHall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsTaken" /> @Html.DisplayNameFor(model => model.IsTaken)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HallNr" class="control-label"></label>
                <input asp-for="HallNr" class="form-control" />
                <span asp-validation-for="HallNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrOfSeats" class="control-label"></label>
                <input asp-for="NrOfSeats" class="form-control" />
                <span asp-validation-for="NrOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
