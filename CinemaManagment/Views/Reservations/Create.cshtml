@model CinemaManagment.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label class="control-label">Show Id</label>
                <select asp-for="ShowId" class ="form-control" asp-items="ViewBag.ShowId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SeatNr" class="control-label"></label>
                <select asp-for="SeatNr" class ="form-control" asp-items="ViewBag.SeatNr"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Shows">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
